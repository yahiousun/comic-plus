{
  "manifest_version": 2,
  "name": "Comic Plus",
  "description": "Turn any page into a comic reader",
  "version": "0.0.2",
  "default_locale": "zh_CN",
  "permissions": [
    "tabs",
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Comic this"
  },
  "web_accessible_resources": ["app.html"],
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["content.js"]
    }
  ]
}
